<td class="text-center">
  <% if department.active %>
    <i class="fa fa-check fa-check-green" aria-hidden="true"></i>
  <% else %>
    <i class="fa fa-times fa-times-red" aria-hidden="true"></i>
  <% end %>
</td>
<td>
  <%= department.name %>
</td>
<td>
  <%= link_to active_button(department),
              toggle_active_admin_feasibility_analysis_department_path(department),
              remote: true,
              method: :patch,
              class: "button hollow" %>
  <%= link_to t("admin.departments.index.edit"),
              edit_admin_feasibility_analysis_department_path(department),
              class: "button hollow" %>
  <% if department.feasibility_analyses.empty? %>
    <%= link_to t("admin.departments.index.delete"),
                admin_feasibility_analysis_department_path(department),
                method: :delete, class: "button hollow alert" %>
  <% end %>
</td>
