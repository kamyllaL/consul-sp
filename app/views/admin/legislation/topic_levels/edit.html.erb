<% provide :title do %>
  <%= t("admin.header.title") %> - <%= t("admin.menu.legislation") %> - <%= @process.title %> - <%= t("admin.legislation.topics.index.title") %>
<% end %>

<div class="legislation-admin legislation-draft-versions-index">

  <%= back_link_to admin_legislation_process_topics_path,
    t("admin.legislation.topic_levels.new.back")
  %>

  <h2><%= @process.title %></h2>

  <%= render "admin/legislation/processes/subnav",
    process: @process, active: "topics"
  %>

  <h2 class="inline-block">
    <%= t("admin.lagislation.topic_levels.edit.title") %>
  </h2>

  <%= render 'form',
    url: admin_legislation_process_topic_level_path(@process, @topic_level)
  %>

</div>
