<div class="open-gov-form row">
  <%= form_for([:admin, @article], url: url) do |f| %>

    <%= render "shared/errors", resource: @article %>

    <div class="row">
      <div class="small-12 column">
        <%= f.text_field(:title, required: true) %>
      </div>
      <div class="small-12 column">
        <%= f.text_area(:text, class: "html-area admin") %>
      </div>
    </div>

    <div class="row">
      <div class="actions small-12 medium-4 column">
        <%= f.submit(
          class: "button expanded large",
          value: t("admin.open_gov.articles.form.save")
        ) %>
      </div>
    </div>

  <% end %>
</div>
