<div class="open-gov-form row">
  <%= form_for([:admin, @commitment], url: url) do |f| %>

    <%= render "shared/errors", resource: @commitment %>

    <%= f.hidden_field(:open_gov_plan_id, :value => @plan.id) %>

    <div class="row">
      <div class="small-12 column">
        <%= f.text_field(:title, required: true) %>
      </div>

      <div class="small-12 medium-3 column">
        <%= f.text_field :starts_at,
                          value: format_date_for_calendar_form(@commitment.starts_at),
                          class: "js-calendar-full",
                          id: "start_date" %>
      </div>

      <div class="small-12 medium-3 column">
        <%= f.text_field :ends_at,
                          value: format_date_for_calendar_form(@commitment.ends_at),
                          class: "js-calendar-full",
                          id: "end_date" %>
      </div>

      <div class="small-12 column">
        <%= f.text_field(:coordenation) %>
      </div>

      <div class="small-12 column">
        <%= f.text_field(:work_group) %>
      </div>
    </div>

    <div class="row">
      <div class="actions small-12 medium-4 column">
        <%= f.submit(
          class: "button expanded large",
          value: t("admin.open_gov.plans.form.save")
        ) %>
      </div>
    </div>

  <% end %>
</div>
