<% provide :title do %>
  <%= t("admin.header.title") %> - <%= t("admin.menu.open_gov") %> %>
<% end %>

<h2><%= t("admin.open_gov.index.title") %></h2>

<%= render "/admin/open_gov/subnav", active: "monitoring" %>

<div>
  <h3 class="inline-block">
    <%= t("admin.open_gov.plans.index.plans") %>
  </h3>

  <%= link_to t("admin.open_gov.plans.index.create"),
    new_admin_open_gov_plan_path,
    class: "button float-right"
  %>
</div>

<% if @plans.any? %>
  <table>
    <thead>
      <th class="small-8 medium-5">
        <%= t("admin.open_gov.plans.index.title") %>
      </th>
      <th class="small-8 medium-2">
        <%= t("admin.open_gov.plans.index.start_date") %>
      </th>
      <th class="small-8 medium-2">
        <%= t("admin.open_gov.plans.index.end_date") %>
      </th>
      <th class="text-center"><%= t("admin.actions.actions") %></th>
    </thead>
    <tbody>
      <% @plans.each do |plan| %>
        <%= render "plan", plan: plan %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="callout primary margin-top clear">
    <%= t("admin.open_gov.plans.index.no_plans") %>
  </div>
<% end %>



