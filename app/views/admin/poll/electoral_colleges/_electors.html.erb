<% if @electoral_college.electors.count == 0 %>
  <div class="callout primary margin-top">
    <%= t("admin.electoral_college.elector.no_electors") %>
  </div>
<% else %>
  <p class="download-link inline-block">
    <%= link_to t("admin.electoral_colleges.elector.result_spreadsheet"),
      admin_poll_electoral_colleges_path(@poll, csv_params),
      class: "small"
    %>
  </p>
  <table class="fixed">
    <thead>
      <tr>
        <th><%= t("admin.electoral_colleges.elector.document_type") %></th>
        <th><%= t("admin.electoral_colleges.elector.document_number") %></th>
        <th><%= t("admin.electoral_colleges.elector.category") %></th>
        <th><%= t("admin.electoral_colleges.elector.user_found") %></th>
        <th><%= t("admin.electoral_colleges.elector.voted") %></th>
        <th class="small-4 text-center"><%= t("admin.actions.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @electoral_college.electors.each do |elector| %>
        <tr id="<%= dom_id(elector) %>">
          <td><%= elector.document_type %></td>
          <td><%= elector.document_number %></td>
          <td><%= elector.category %></td>
          <td class="text-center">
            <% if elector.user_found? %>
              <i class="fa fa-check fa-check-green" aria-hidden="true"></i>
            <% else %>
              <i class="fa fa-times fa-times-red" aria-hidden="true"></i>
            <% end %>
          </td>
          <td class="text-center">
            <% if @poll.voted_by?(elector.user) %>
              <i class="fa fa-check fa-check-green" aria-hidden="true"></i>
            <% else %>
              <i class="fa fa-times fa-times-red" aria-hidden="true"></i>
            <% end %>
          </td>
          <td>
            <div class="small-6 column">
              <%= link_to t("shared.edit"),
              edit_admin_poll_electoral_college_elector_path(@poll, @electoral_college, elector),
              class: "button hollow expanded" %>
            </div>
            <div class="small-6 column">
              <%= link_to t("shared.delete"), admin_poll_electoral_college_elector_path(@poll, @electoral_college, elector), class: "button hollow alert expanded", method: :delete %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
