<nav class="admin-sidebar">
  <ul id="edition_menu">
    <li>
      <%= link_to t("edition.dashboard.index.title"), edition_root_path %>
    </li>

    <% if feature?(:polls) %>
      <li class="section-title <%= "is-active" if menu_polls? %>">
        <%= link_to admin_polls_path do %>
          <span class="icon-checkmark-circle"></span>
          <strong><%= t("admin.menu.polls") %></strong>
        <% end %>
      </li>
    <% end %>

    <% if feature?(:legislation) %>
      <li class="section-title <%= "is-active" if controller.class.parent == Edition::Legislation %>">
        <%= link_to edition_legislation_processes_path do %>
          <span class="icon-file-text"></span>
          <strong><%= t("admin.menu.legislation") %></strong>
        <% end %>
      </li>
    <% end %>
    
  </ul>
</nav>
