<%= render "shared/globalize_locales", resource: @poll if @current_user.administrator? %>

<%= translatable_form_for [:edition, @poll] do |f| %>
  <%= render "shared/errors", resource: @poll %>

  <% if @current_user.administrator? %>
    <div class="row">
      <div class="clear">
        <div class="small-12 medium-6 column">
          <%= f.text_field :starts_at,
                            value: @poll.starts_at.present? ? l(@poll.starts_at.to_date) : nil,
                            class: "js-calendar-full" %>
        </div>

        <div class="small-12 medium-6 column">
          <%= f.text_field :ends_at,
                            value: @poll.ends_at.present? ? l(@poll.ends_at.to_date) : nil,
                            class: "js-calendar-full" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <%= f.translatable_fields do |translations_form| %>
      <div class="small-12 medium-6 column">
        <%= translations_form.text_field :name %>
      </div>

      <div class="small-12 column">
        <%= translations_form.text_area :summary, rows: 4 %>
      </div>

      <div class="small-12 column">
        <%= translations_form.text_area :description, rows: 8 %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="small-12 column">
      <%= render "images/admin_image", imageable: @poll, f: f %>
    </div>

    <% if @current_user.administrator? %>
      <div class="clear">
        <div class="small-6 medium-6 column">
          <%= f.check_box :geozone_restricted, id: "subs_restricted", checked: @poll.geozones.try(:first).try(:district) == false %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @current_user.administrator? %>
    <div id="subs" style="<%= @poll.geozones.try(:first).try(:district) == false ? "" : "display:none" %>">
      <div class="row">
        <%= f.collection_check_boxes(:geozone_ids, @subs, :id, :name) do |b| %>
          <div class="small-6 medium-3 column">
            <%= b.label do %>
              <%= b.check_box + b.text %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="clear">
        <div class="column">
          <%= f.check_box :geozone_restricted, label: t('admin.polls.new.district_restricted'), id: "districts_restricted", checked: @poll.geozones.try(:first).try(:district) == true %>
        </div>
      </div>

      <div id="districts" style="<%= @poll.geozones.try(:first).try(:district) == true ? "" : "display:none" %>">
        <div class="row column">
          <%= f.collection_check_boxes(:geozone_ids, @districts, :id, :name) do |b| %>
            <div class="small-6 medium-3 column">
              <%= b.label do %>
                <%= b.check_box + b.text %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="small-6 column">
        <%= f.check_box :electoral_college_restricted %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="clear">
      <div class="small-12 medium-4 large-2 column">
        <%= f.submit t("admin.polls.#{admin_submit_action(@poll)}.submit_button"),
                     class: "button success margin-top" %>
      </div>
    </div>
  </div>

<% end %>
