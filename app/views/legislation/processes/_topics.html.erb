<div class="small-12 calc-index-topic column border-left" data-equalizer-watch>
  <div class="topic-panel">
    <div>
      <span class="icon-banner" aria-hidden="true"></span> <span class="panel-title"><%= t(".text_toc") %></span>
    </div>
  </div>
  <div class="topic-index">
    <ul>
      <% counter_level = 1 %>
      <% topics.roots.each.with_index(1) do |topic, index| %>
        <%= render '/legislation/topics/topic_index',
          topic: topic, indexes: [index], counter_level: counter_level
        %>
      <% end %>
    </ul>
  </div>
</div>

<div class="small-12 calc-text-topic column border-right border-left" data-equalizer-watch>
  <div class="topic-panel">
    <div><span class="panel-title"><%= t(".text_body") %></span></div>
  </div>
  <div class="topic-content">
    <% counter_level = 1 %>
    <% topics.roots.each.with_index(1) do |topic, index| %>
      <%= render '/legislation/topics/topic',
        topic: topic, indexes: [index], counter_level: counter_level
      %>
    <% end %>
  </div>
</div>
