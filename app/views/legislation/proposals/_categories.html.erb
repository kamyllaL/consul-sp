			  <% else %>
				<% css_class = nil %>
			  <% end %>

			  <% tag_search = "" if css_class == { class: "is-active" } %>

			  <%= link_to tag,
			              legislation_process_proposals_path(process_id: @process, search: tag_search),
			              css_class || {} %>

			</li>
		<% end %>
	<% end %>

	<% districts_tags = @process.tag_list_on(:districts) %>
    <% if districts_tags.any? %>
		<p><%= t("admin.legislation.processes.index.tag_district_label") %></p>
		<% @process.tag_list_on(:districts).each do |tag| %>
			<li class="inline-block">
			  <% tag_search = tag %>

			  <% if params[:search] == tag %>
				<% css_class = { class: "is-active" } %>
			  <% else %>
