<div class="sidebar-divider"></div>
<h2 class="sidebar-title"><%= t("shared.tags_cloud.categories") %></h2>
<br>

<ul id="categories" class="no-bullet categories">
	<% customs_tags = @process.tag_list_on(:customs) %>
	<% if customs_tags.any? %>
		<p><%= t("admin.legislation.processes.index.tag_category_label") %></p>
		<% @process.tag_list_on(:customs).each do |tag| %>
			<li class="inline-block">
			  <% tag_search = tag %>

			  <% if params[:search] == tag %>
				<% css_class = { class: "is-active" } %>
			  <% else %>
				<% css_class = nil %>
			  <% end %>

			  <% tag_search = "" if css_class == { class: "is-active" } %>
			  <%= link_to tag,
			              legislation_process_proposals_path(process_id: @process, search: tag_search),
			              css_class || {} %>
			</li>
		<% end %>
	<% end %>

	<% subprefectures_tags = @process.tag_list_on(:subprefectures) %>
