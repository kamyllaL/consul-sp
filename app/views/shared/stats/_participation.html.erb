<div id="participation_statistics">
  <h3 class="section-title"><%= t("stats.title") %></h3>

  <div id="total_participants" class="stats-group no-margin-bottom">
    <h4><%= t("stats.total_participants") %></h4>

    <%= number_with_info_tags(
      stats.total_participants,
      "",
      html_class: "participants total-participants no-margin-bottom"
    ) %>
  </div>

  <% if stats.total_no_demographic_data > 0 %>
    <div id="total_no_demographic_data">
      <p class="help-text tiny">
        <%= t(
          "stats.no_demographic_data", count: stats.total_no_demographic_data
        ) %>
      </p>
    </div>
  <% end %>

  <% stats.participations.each do |participation| %>
    <%= render "shared/stats/#{participation}", stats: stats %>
  <% end %>
</div>
