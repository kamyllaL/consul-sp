<%= back_link_to %>

<h2><%= t("devise_views.users.registrations.delete_form.title") %></h2>

<%= form_for(resource, as: resource_name,
             url: users_registrations_path,
             html: { method: :delete }) do |f| %>
  <%= render "shared/errors", resource: resource %>

  <div data-alert class="callout alert">
    <%= t("devise_views.users.registrations.delete_form.info") %>
  </div>

  <%= f.select(
    :erase_reason,
    options_for_erase_reason,
    label: t("devise_views.users.registrations.delete_form.erase_reason_label"),
    required: true,
    include_blank: true
  ) %>

  <%= f.text_field(:erase_reason_description,
    autofocus: true,
    label: false,
    hint: t("devise_views.users.registrations.delete_form.info_reason")
  ) %>

  <%= f.submit t("devise_views.users.registrations.delete_form.submit"), class: "button alert expanded" %>
<% end %>
